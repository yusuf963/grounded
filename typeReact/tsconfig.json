{
  "compilerOptions": {
    "target": "esnext",
    "module": "es6",
    "strict": true,
      "noEmit": true,
      "isolatedModules": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "jsx": "react",
      // "jsx": "react-jsx",
      "sourceMap": true,
      "moduleResolution": "node",
      "resolveJsonModule": true,
      "plugins": [{"name": "typescript-plugin-css-modules"}]
  },
  "include": ["./src/**/*"],
}